/* dark */
.res-sty-dark {
  color: #fff;
}

/* ctrl */
.btn-ctrl-sty-dark {
  background-color: #a5a5a5;
}

/* num */
.btn-num-sty-dark {
  background-color: #333333;
}

/* = */
.btn-equal-sty-dark {
  background-color: #f09a37;
  color: #fff;
}

/* + */
.btn-add-sty-dark {
  transition: background-color .8s, color .8s;
  background-color: #f09a37;
  color: #fff;
}

/* - */
.btn-subtract-sty-dark {
  transition: background-color .8s, color .8s;
  background-color: #f09a37;
  color: #fff;
}

/* x */
.btn-multiply-sty-dark {
  transition: background-color .8s, color .8s;
  background-color: #f09a37;
  color: #fff;
}

/* ÷ */
.btn-divide-sty-dark {
  transition: background-color .8s, color .8s;
  background-color: #f09a37;
  color: #fff;
}


/* hover */
/* + */
.btn-add-sty-dark:hover {
  transition: background-color .8s, color .8s;
  background-color: #fff;
  color: #f09a37;
}

/* - */
.btn-subtract-sty-dark:hover {
  transition: background-color .8s, color .8s;
  background-color: #fff;
  color: #f09a37;
}

/* x */

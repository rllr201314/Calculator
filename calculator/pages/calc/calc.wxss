/* pages/calc/calc.wxss */

/* 按键区 */
.line-main {
  position: absolute;
  bottom: 0;
  height: 900rpx;
  width: 750rpx;
}

.line {
  height: 150rpx;
  width: 750rpx;
  margin-bottom: 30rpx;
}

.btn {
  float: left;
  height: 150rpx;
  width: 150rpx;
  border-radius: 150rpx;
  margin-left: 30rpx;
  border: none;
  line-height: 150rpx;
  font-size: 58rpx;
  font-weight: 450;
  font-stretch: semi-condensed;
}

button::after {
  border: none
}

.btn-zero {
  float: left;
  height: 150rpx;
  width: 330rpx;
  border-radius: 70rpx;
  text-align: left;
  padding-left: 60rpx;
}

/* 显示区 */
.res-main {
  position: relative;
  text-align: right;
  margin-right: 30rpx;
  margin-left: 30rpx;
  font-size: 100rpx;
}

.res {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}

/* 颜色样式 */

